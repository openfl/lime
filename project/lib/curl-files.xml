		<tag value="${NATIVE_TOOLKIT_OPTIM_TAG}" if="NATIVE_TOOLKIT_OPTIM_TAG" />
		<depend files="native-toolkit-curl-depends" />

		<compilerflag value="-I${NATIVE_TOOLKIT_PATH}/custom/curl/lib/" />
